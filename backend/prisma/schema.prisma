generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Batches{
  id String @id
  branch String
  semester String
  course BatchCourse[]
}
model Course{
  code String @id
  Cname String
  batches BatchCourse[]
  teacher ITeacher[]
  schedule Schedule[]
}
model BatchCourse{
  batch String
  Ccode String
  batchR Batches @relation(fields: [batch],references: [id])
  courseR Course @relation(fields:[Ccode],references: [code])
  @@unique([batch,Ccode])
}
model Teacher{
  ECode String @id
  Tname String
  tags String[]
  internal ITeacher[]
  exam Schedule[]
}

model ITeacher{
  section String
  Ccode String
  Teacher String
  sec Section @relation(fields: [section], references: [id])
  course Course @relation(fields: [Ccode],references: [code])
  teacher Teacher @relation(fields: [Teacher],references: [ECode])
  exam Schedule[]
  @@unique([section,Ccode])
}
model Section{
  id String @id
  batch String
  group String
  capacity Int @default(36)
  teacher ITeacher[]
  exam Schedule[]
}

model Rooms{
  labNo String
  block String
  capacity Int
  exams Schedule[]
  @@unique([labNo,block])
}

model Schedule{
  created DateTime @default(now())
  Ccode String
  sectionId String
  internal String
  capacity Int
  labNo String
  block String
  date DateTime
  timeSlot Int
  external String
  course Course @relation(fields: [Ccode],references: [code])
  section Section @relation(fields: [sectionId],references: [id])
  iTeacher ITeacher @relation(fields: [sectionId,Ccode],references: [section,Ccode])
  externalR Teacher @relation(fields: [external], references: [ECode])
  lab Rooms @relation(fields: [labNo,block], references: [labNo,block])
  @@unique([sectionId,Ccode])
}