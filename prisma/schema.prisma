generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  username String @id
  name String
  hash String
  salt String
}

model Session{
  id String @id @default(uuid())
  startYear String
  endYear String
  term String
}

model Degree{
  id String @id
  Batches Batches[]
}

model Branch{
  id String @id
  name String?
  batches Batches[]
}


model Batches{
  id String @id
  branch String
  semester String
  BEME String @default("BE")
  Degree Degree @relation(fields: [BEME],references: [id])
  branchR Branch @relation(fields: [branch],references: [id])
  course BatchCourse[]
  section Section[]
}
model Course{
  code String @id
  Cname String
  batches BatchCourse[]
  teacher ITeacher[]
  schedule Schedule[]
}
model BatchCourse{
  batch String
  Ccode String
  batchR Batches @relation(fields: [batch],references: [id])
  courseR Course @relation(fields:[Ccode],references: [code])
  @@unique([batch,Ccode])
}
model Teacher{
  ECode String @id
  Tname String
  tags String[]
  gender String
  internal ITeacher[]
  exam Schedule[]
}

model ITeacher{
  section String
  Ccode String
  Teacher String
  sec Section @relation(fields: [section], references: [id])
  course Course @relation(fields: [Ccode],references: [code])
  teacher Teacher @relation(fields: [Teacher],references: [ECode])
  exam Schedule[]
  @@unique([section,Ccode])
}
model Section{
  id String @id
  batch String
  group String
  capacity Int @default(36)
  teacher ITeacher[]
  exam Schedule[]
  batchR Batches @relation(fields: [batch],references: [id])
  softSkill SoftSkillSchedule[]
}

model Rooms{
  labNo String
  block String
  capacity Int
  exams Schedule[]
  @@unique([labNo,block])
}

model Schedule{
  created DateTime @default(now())
  Ccode String
  sectionId String
  internal String
  capacity Int
  labNo String
  block String
  date DateTime
  timeSlot Int
  external String
  course Course @relation(fields: [Ccode],references: [code])
  section Section @relation(fields: [sectionId],references: [id])
  iTeacher ITeacher @relation(fields: [sectionId,Ccode],references: [section,Ccode])
  externalR Teacher @relation(fields: [external], references: [ECode])
  lab Rooms @relation(fields: [labNo,block], references: [labNo,block])
  @@unique([sectionId,Ccode])
}

model SoftSkillSchedule{
  created DateTime @default(now())
  sectionId String
  Ccode String
  Cname String
  IEcode String
  ITname String
  labNo String
  block String
  capacity String
  date DateTime
  timeSlot Int
  EEcode String
  ETname String
  tags String[] @default(["DCPD"])
  sec Section @relation(fields: [sectionId],references: [id])
  @@unique([sectionId,Ccode])
}